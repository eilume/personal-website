---
pageTitle: Blog
permalink: "/{{ locale }}/blog/index.html"
translationKey: "blogpage"
---

{% extends "layouts/base.njk" %}

{% block content %}

  <h2 class="title">Blogposts archive</h2>
  {% for post in collections.blogposts_en %}
    {% if loop.first %}<ul class="post-list">{% endif %}
      <li>
        <article class="post u-flex u-justify-between">
          <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
          <time datetime="{{ post.date | date('Y-MM-DD') }}">{{ post.date | date("DD MMMM[,] Y", locale) }}</time>
        </article>
      </li>

    {% if loop.last %}</ul>{% endif %}
  {% endfor %}

{% endblock %}
